generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model despesa {
  id     Int    @id @default(autoincrement())
  titulo String
  valor  String
  userId Int
  user   user   @relation(fields: [userId], references: [id], map: "Despesa_userId_fkey")

  @@index([userId], map: "Despesa_userId_fkey")
}

model user {
  id       Int       @id @default(autoincrement())
  name     String
  idade    String
  estado   String
  cidade   String
  email    String    @unique(map: "User_email_key")
  senha    String
  carteira String?   @default("0")
  nivel    String?   @default("1")
  ativo    Boolean?  @default(true)
  criado   DateTime? @default(now())
  tipo     user_tipo @default(USER)
  despesa  despesa[]
}

enum user_tipo {
  USER
  ADMIN
}
